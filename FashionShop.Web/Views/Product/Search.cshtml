<div class="wp=content">
    <div class="container">
        <div class="row">
            <div class="col-9" style="padding:0;margin-bottom:20px;">
                <div class="w_content container">
                    <div class="women row">
                        <div class="col-md-5" style="font-size:20px;">
                            <h4>Kết quả tìm kiếm: @keyword - <span>@Model.TotalCount sản phẩm</span> </h4>
                        </div>
                        <div class="col-md-7">
                            <ul class="w_nav">
                                <li>Sắp xếp : </li>
                                <li><a class="active" href="?keyword=@keyword&page=@Model.Page&sort=popular">Phổ biến</a></li> |
                                <li><a href="?keyword=@keyword&page=@Model.Page&sort=new">Mới </a></li> |
                                <li><a href="?keyword=@keyword&page=@Model.Page&sort=discount">Khuyến mãi</a></li> |
                                <li><a href="?keyword=@keyword&page=@Model.Page&sort=price">Giá: Thấp -> Cao </a></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
            <!-- list-products -->
            <div id="list-products" class="col-9 container">
                <div class="list-product clearfix row">
                    @if (Model.Count > 0)
                    {
                        foreach (var product in Model.Items)
                        {
                            var url = "/san-pham/" + @product.Alias + "/" + @product.ID;
                            <div class="product fl-left col-4">
                                <div>
                                    <div class="product-img">
                                        <a href="@url"><img src="@product.Image" alt="@product.Image"></a>
                                    </div>
                                    <div>
                                        <ul class="product-information">
                                            <li style="padding: 10px;">
                                                <h5><a href="@url">@product.Name</a></h5>
                                            </li>
                                            <li style="padding: 8px;">
                                                <a href="@url">
                                                    @if (@product.PromotionPrice == null)
                                                    {
                                                        <h>@string.Format("{0:#,##0}", product.Price)đ</h>
                                                    }
                                                    else
                                                    {
                                                        <h>@string.Format("{0:#,##0}", product.PromotionPrice)đ</h>
                                                        <h style="text-decoration: line-through;color: #dddddd;">
                                                            @string.Format("{0:#,##0}", product.Price)đ
                                                        </h>
                                                    }
                                                </a>
                                            </li>

                                            <li style="padding: 10px 10px 0px 10px;">
                                                <button type="button" class="btn btn-outline-warning">thêm giỏ hàng</button>
                                            </li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        }

                    }
                    else
                    {
                        <div class="text-center">Không có bản ghi nào được tìm thấy.</div>
                    }
                </div>
                @if (Model.TotalPages > 1)
                {
                    // Create numeric links
                    var startPageIndex = Math.Max(1, Model.Page - Model.MaxPage / 2);
                    var endPageIndex = Math.Min(Model.TotalPages, Model.Page + Model.MaxPage / 2);

                    <nav>
                        <ul class="pagination">
                            @if (Model.Page > 1)
                            {
                                <li class="page-item">
                                    <a class="page-link" href="?keyword=@keyword&page=1" aria-label="First">
                                        <i class="fa fa-angle-double-left"></i>
                                    </a>
                                </li>
                                <li class="page-item">
                                    <a class="page-link" href="?keyword=@keyword&page=@(Model.Page-1)" aria-label="Previous">
                                        <i class="fa fa-angle-double-left"></i>
                                    </a>
                                </li>
                            }
                            @for (int i = startPageIndex; i <= endPageIndex; i++)
                            {
                                if (Model.Page == i)
                                {
                                    <li class="active page-item"><a class="page-link" href="?keyword=@keyword&page=@i" title="Trang @i">@i</a></li>
                                }
                                else
                                {
                                    <li class="page-item"><a class="page-link" href="?keyword=@keyword&page=@i" title="Trang @i">@i</a></li>
                                }
                            }
                            @if (Model.Page < Model.TotalPages)
                            {
                                <li class="page-item">
                                    <a class="page-link" href="?keyword=@keyword&page=@(Model.Page+1)" aria-label="Next">
                                        <i class="fa fa-angle-double-right"></i>
                                    </a>
                                </li>
                                <li class="page-item">
                                    <a class="page-link" href="?keyword=@keyword&page=@Model.TotalPages" aria-label="Last">
                                        <i class="fa fa-angle-double-right"></i>
                                    </a>
                                </li>
                            }
                        </ul>
                    </nav>
                }
